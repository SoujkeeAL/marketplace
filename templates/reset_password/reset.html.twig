{% extends 'base.html.twig' %}

{% block title %}Сброс пароля{% endblock %}

{% block body %}
    {{ form_start(resetForm) }}
    <div class="Middle Middle_top">
        <div class="Middle-top">
            <div class="wrap">
                <div class="Middle-header">
                    <h1 class="Middle-title">Сброс пароля</h1>
                    <ul class="breadcrumbs Middle-breadcrumbs">
                        <li class="breadcrumbs-item"><a href="{{ path('app_main') }}">Главная</a></li>
                        <li class="breadcrumbs-item breadcrumbs-item_current"><span>Регистрация</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="Section">
            <div class="wrap">
                <form class="form Authorization" action="#" method="post">
                    <div class="row">
                        <div class="row-block">
                            <div class="form-group">
                                {{ form_row(resetForm.plainPassword) }}
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Сбросить пароль</button>
                            </div>
                            {{ form_end(resetForm) }}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>




{% endblock %}
