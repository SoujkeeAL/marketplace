<div class="Section-content">
    <header class="Section-header">
        <h2 class="Section-title">Каталог Топ товаров</h2>
    </header>
    <div class="Cards">
        {% for topGood in topGoods %}
            <div class="Card">
                <a class="Card-picture" href="{{ path('app_product',{'id': topGood.id}) }}">
                    <img src="{{ asset('assets/img/content/goods/') }}{{ topGood.picture }}1.jpg" alt="card.jpg"/>
                </a>
                <div class="Card-content">
                    <strong class="Card-title">
                        <a href="{{ path('app_product',{'id': topGood.id}) }}">{{ topGood.goodName }}</a>
                    </strong>
                    <div class="Card-description">
                        <div class="Card-cost">
                            <span class="Card-priceOld">{{ topGood.prev_price }}</span>
                            <span class="Card-price">{{ topGood.final_price }}</span>
                        </div>
                        <div class="Card-category">{{ topGood.name }}
                        </div>
                        <div class="Card-hover"><a class="Card-btn" href="#">
                                <img src="{{ asset('assets/img/icons/card/bookmark.svg') }}" alt="bookmark.svg"/>
                            </a>
                            <a class="Card-btn" href="#">
                                <img src="{{ asset('assets/img/icons/card/cart.svg') }}" alt="cart.svg"/>
                            </a>
                            <a class="Card-btn" href="compare.html">
                                <img src="{{ asset('assets/img/icons/card/change.svg') }}" alt="change.svg"/>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="Card-sale">-60%
                </div>
            </div>
        {% endfor %}
    </div>
</div>